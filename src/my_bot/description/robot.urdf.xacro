<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="four_wheeled_robot">
    
    <!-- Arguments -->
    <xacro:arg name="prefix" default=""/>
    
    <!-- Define materials -->
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.15"/>
            <geometry>
                <box size="1.0 0.5 0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.15"/>
            <geometry>
                <box size="1.0 0.5 0.2"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <origin xyz="0 0 0.15"/>
            <inertia ixx="0.583" ixy="0" ixz="0" 
                    iyy="1.083" iyz="0" 
                    izz="1.583"/>
        </inertial>
    </link>

    <!-- Front Right Wheel -->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.002858" ixy="0" ixz="0" 
                    iyy="0.002858" iyz="0" 
                    izz="0.005625"/>
        </inertial>
    </link>


<!-- Front Right Wheel -->
<joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.5 -0.275 0.1" rpy="-${pi/2} 0 0"/>  <!-- Changed rpy -->
    <axis xyz="0 0 1"/>  <!-- Changed axis -->
</joint>

    <!-- Front Left Wheel -->
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.002858" ixy="0" ixz="0" 
                    iyy="0.002858" iyz="0" 
                    izz="0.005625"/>
        </inertial>
    </link>

<!-- Front Left Wheel -->
<joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.5 0.275 0.1" rpy="-${pi/2} 0 0"/>  <!-- Changed rpy -->
    <axis xyz="0 0 1"/>  <!-- Changed axis -->
</joint>

    <!-- Rear Right Wheel -->
    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.002858" ixy="0" ixz="0" 
                    iyy="0.002858" iyz="0" 
                    izz="0.005625"/>
        </inertial>
    </link>
<!-- Rear Right Wheel -->
<joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.5 -0.275 0.1" rpy="-${pi/2} 0 0"/>  <!-- Changed rpy -->
    <axis xyz="0 0 1"/>  <!-- Changed axis -->
</joint>

    <!-- Rear Left Wheel -->
    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.002858" ixy="0" ixz="0" 
                    iyy="0.002858" iyz="0" 
                    izz="0.005625"/>
        </inertial>
    </link>
<!-- Rear Left Wheel -->
<joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.5 0.275 0.1" rpy="-${pi/2} 0 0"/>  <!-- Changed rpy -->
    <axis xyz="0 0 1"/>  <!-- Changed axis -->
</joint>

    <!-- ros2_control section -->
    <ros2_control name="GazeboSystem" type="system">
        <hardware>
            <plugin>gazebo_ros2_control/GazeboSystem</plugin>
        </hardware>
        
        <joint name="front_left_wheel_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <joint name="front_right_wheel_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <joint name="rear_left_wheel_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <joint name="rear_right_wheel_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
    </ros2_control>

    <!-- Gazebo plugin -->
    <gazebo>
        <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
            <parameters>$(find my_bot)/config/controllers.yaml</parameters>
        </plugin>
    </gazebo>

    <!-- Base color in Gazebo -->
    <gazebo reference="base_link">
        <material>Gazebo/Blue</material>
    </gazebo>

</robot>